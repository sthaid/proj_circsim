clear_schematic

add power      b1  c1 5v,5hz
add diode      b1  b2 
add capacitor  b2  c2 1mf
add wire       c2  c1
add wire       b2  b3
add resistor   b3  c3 100
add wire       c3 c2

ground c1

set center c2,7,134
set scale  322

set scope_t 1s
set scope_a voltage,-10,10,b1,c1,POWER
set scope_b voltage,-10,10,b1,b2,DIODE
set scope_c voltage,-10,10,b2,c2,CAP
set scope_d voltage,-10,10,b3,c3,RESISTOR

model run 1s

